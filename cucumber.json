{
  "default": {
    "paths": ["src/tests/features"],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "require": ["src/tests/steps/*.ts", "src/hooks/*.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "html:test-result/report/cucumber-report.html",
      "rerun:@rerun.txt"
    ],
    "parallel": 2,
    "retry": 1
  },
  "rerun": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "require": ["src/tests/steps/*.ts", "src/hooks/*.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "html:test-result/report/cucumber-report.html",
      "rerun:@rerun.txt"
    ],
    "parallel": 2
  }
}
